<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 四种宽高 -->
    <style name="base_fill_fill">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="base_wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_fill_wrap">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_wrap_fill">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <!-- 竖线 风格 -->
    <style name="line_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <!-- 横线 风格 -->
    <style name="line_horizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <style name="login_edt" parent="@style/base_fill_wrap">
        <item name="android:background">@null</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/tv_content</item>
    </style>

    <style name="login_btn" parent="@style/base_fill_wrap">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/login_btn_press</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/tv_btn</item>
    </style>
</resources>
